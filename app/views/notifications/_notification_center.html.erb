<ul class="notificator">
  <a href="#" id="open_notification">
    <%= render 'notifications/counter', counter: notifications.unread.count %>
  </a>
  <div id="notificationContainer">
    <div id="notificationTitle">
      通知
      <%= link_to "全部標為已讀", mark_all_read_notifications_path, method: :POST, remote: true %>
    </div>
    <div id="notificationsBody" class="notifications">
      <ul class="notification-list" id="notificationList">
        <% notifications.each do |notification| %>
          <%=render partial: "notifications/share_list", locals: {notification: notification} %>
        <% end %>
      </ul>
    </div>
    <div id="notificationFooter">
      <%= link_to "所有通知", notifications_path %>
    </div>
  </div>
</ul>