// reload navbar notification body
$("#notificationsBody").load(" #notificationsBody > *");

// reload notifications index if in notifications index page
if (location.pathname == "/notifications"){
   $("#notificationsIndex").load(" #notificationsIndex > *"); 
};  

// update counter
$counter = $("#notification-counter");
val = parseInt($counter.text());
val--;
$counter.css({opacity: 0});
$counter.text(val);
$counter.css({top: '-10px'});
$counter.css({top: '-2px', opacity: 1});
